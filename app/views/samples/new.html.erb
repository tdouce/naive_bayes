<h1>Enter a sample</h1>
<%= form_for @sample, :remote => true do |f| %>

  <div>
    <%= render 'shared/forminputs', :object => f %>
  </div>

  <%= f.submit "Test Sample", :id => 'submit_sample' %>

  <%= button_tag(:type => 'button', :id => 'clear_button') do %>
    <%= label_tag('Clear') %>
  <% end %>

<% end %>


<h2>Result:</h2>
<%= render 'result' %>
 
